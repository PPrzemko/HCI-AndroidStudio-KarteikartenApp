<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <EditText
        android:id="@+id/TextEditInput1changePw"
        android:layout_width="205dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="neues Passwort"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/TextEditInput2changePw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.798"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextEditUserChangePw"
        app:layout_constraintVertical_bias="0.434" />

    <TextView
        android:id="@+id/PwInput1changePw"
        android:layout_width="144dp"
        android:layout_height="37dp"
        android:text="neues Passwort"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.207"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.414" />

    <TextView
        android:id="@+id/benutzernameChangePw"
        android:layout_width="144dp"
        android:layout_height="37dp"
        android:layout_marginTop="28dp"
        android:text="@string/username"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.207"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UberschriftPasswort"
        app:layout_constraintVertical_bias="0.003" />

    <TextView
        android:id="@+id/PwInput2changePw"
        android:layout_width="164dp"
        android:layout_height="52dp"
        android:layout_marginStart="28dp"
        android:text="Passwort wiederholen"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/TextEditUserChangePw"
        app:layout_constraintHorizontal_bias="0.419"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.596" />

    <EditText
        android:id="@+id/TextEditInput2changePw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Passwort wiederholen"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.798"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <EditText
        android:id="@+id/TextEditUserChangePw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/username"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.798"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.209" />

    <Button
        android:id="@+id/passwortNeu"
        android:layout_width="146dp"
        android:layout_height="56dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="29dp"
        android:text="@string/change"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.82"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DisplayErrorMessageChangePw"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/abrechenButton"
        android:layout_width="146dp"
        android:layout_height="56dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="29dp"
        android:text="@string/abort"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/passwortNeu"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DisplayErrorMessageChangePw"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/UberschriftPasswort"
        android:layout_width="271dp"
        android:layout_height="42dp"
        android:layout_marginStart="151dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="202dp"
        android:layout_marginBottom="18dp"
        android:text="@string/change_pwd"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/TextEditUserChangePw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DisplayErrorMessageChangePw"
        android:layout_width="278dp"
        android:layout_height="35dp"
        android:background="#F6CDCD"
        android:text="Passworteingaben stimmen nicht Ã¼berein"
        android:textColor="#FB1403"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextEditInput2changePw"
        app:layout_constraintVertical_bias="0.127" />

</androidx.constraintlayout.widget.ConstraintLayout>