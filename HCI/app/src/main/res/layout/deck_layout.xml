<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/roundedcorner"

    tools:visibility="visible">

    <TextView
        android:id="@+id/DeckName"
        android:layout_width="87dp"
        android:layout_height="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.125" />

    <TextView
        android:id="@+id/DeckCount"
        android:layout_width="86dp"
        android:layout_height="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DeckName"
        app:layout_constraintVertical_bias="0.807"
        tools:layout_editor_absoluteX="-1dp" />

    <ImageButton
        android:id="@+id/editDeck"
        android:layout_width="49dp"
        android:layout_height="45dp"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/edit"
        app:layout_constraintEnd_toStartOf="@+id/learnDeck"
        app:layout_constraintStart_toEndOf="@+id/DeckName"
        tools:layout_editor_absoluteY="3dp" />

    <ImageButton
        android:id="@+id/learnDeck"
        android:layout_width="56dp"
        android:layout_height="44dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.792"
        app:layout_constraintStart_toEndOf="@+id/DeckName"
        app:srcCompat="@drawable/back" />

</androidx.constraintlayout.widget.ConstraintLayout>