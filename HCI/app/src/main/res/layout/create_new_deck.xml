<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buttonStapelerstellen"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/uberschriftNewDeck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Neuer Stapel"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/SearchViewYourStacks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.125" />

    <TextView
        android:id="@+id/stapelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="38dp"
        android:text="Stapelname wählen"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/SearchViewYourStacks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/stapelnameNewStack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="143dp"
        android:layout_marginBottom="300dp"
        android:ems="10"
        android:hint="x"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stapelName"
        app:layout_constraintVertical_bias="0.434" />

    <Button
        android:id="@+id/erstellenButtonNewStack"
        android:layout_width="135dp"
        android:layout_height="48dp"
        android:layout_marginStart="147dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="250dp"
        android:backgroundTint="@color/Primary"
        android:text="Erstellen"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stapelnameNewStack"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/back2"
        android:layout_width="97dp"
        android:layout_height="36dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="99dp"
        android:backgroundTint="@color/Primary"
        android:text="zurück"
        app:layout_constraintBottom_toTopOf="@+id/stapelName"
        app:layout_constraintEnd_toStartOf="@+id/uberschriftNewDeck"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="TouchTargetSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>