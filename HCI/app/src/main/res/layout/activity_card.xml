<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/correctBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:tint="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardtextback"
        app:layout_constraintVertical_bias="0.902"
        app:srcCompat="@drawable/done" />

    <ImageButton
        android:id="@+id/wrongBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:tint="#F44336"
        app:layout_constraintEnd_toStartOf="@+id/correctBtn"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/close"
        tools:layout_editor_absoluteY="635dp" />

    <TextView
        android:id="@+id/headingTxt"
        android:layout_width="193dp"
        android:layout_height="37dp"
        android:text="DemoText"
        app:layout_constraintBottom_toTopOf="@+id/cardtextfront"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.669"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.106" />

    <ImageButton
        android:id="@+id/backbtn"
        android:layout_width="80dp"
        android:layout_height="71dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:src="@drawable/back"
        app:layout_constraintEnd_toStartOf="@+id/headingTxt"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cardtextfront"
        android:layout_width="217dp"
        android:layout_height="91dp"
        android:layout_marginBottom="64dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/cardtextback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.427"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/cardtextback"
        android:layout_width="214dp"
        android:layout_height="93dp"
        android:layout_marginBottom="268dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/wrongBtn"
        tools:layout_editor_absoluteX="83dp" />

</androidx.constraintlayout.widget.ConstraintLayout>